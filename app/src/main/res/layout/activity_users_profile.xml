<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ganesh.appchat.UsersProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_iv_user_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/user"/>

    <TextView
        android:id="@+id/profile_tv_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_iv_user_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/setting_full_name"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/profile_tv_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_tv_full_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/setting_hi_there_i_am_using_factchat"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/profile_btn_add_friend"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Send Friend Request"
        android:layout_below="@id/profile_tv_user_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorDarkBlue"
        android:elevation="10dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/profile_btn_decline_request"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:text="DECLINE FRIEND REQUEST"
        android:layout_below="@id/profile_btn_add_friend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorRed"
        android:elevation="10dp" />



</RelativeLayout>
