<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_single_layout"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/message_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/message_image"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/message_name_text"
        android:layout_toEndOf="@+id/message_image"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/message_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/message_name_text"
        android:text="00.00"
        android:textColor="@color/colorBlack"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/message_send_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/message_image"
        android:layout_alignStart="@+id/message_message_text"
        android:layout_below="@+id/message_message_text"
        android:scaleType="centerCrop"
        android:layout_marginTop="2dp"/>




</RelativeLayout>